{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "components": ["components"],
      "types": ["types"],
      "interfaces": ["types/interfaces"],
      "enums": ["types/enums"],
      "pages": ["pages"],
      "hooks": ["hooks"],
      "store": ["store"],
      "api": ["api"],
      "assets": ["assets"],
      "utils": ["utils"],
      "apollo-types": ["types.apollo.tsx"],
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/apollo-types.ts"
  ]
}
